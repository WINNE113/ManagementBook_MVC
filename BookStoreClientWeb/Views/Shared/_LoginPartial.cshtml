@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager


<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link " id="register">Xin Chào</span>
        </li>
        <li class="nav-item">
            <a asp-area="Customer" asp-controller="Authentication" asp-action="Logout" class="nav-link " id="logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="Customer" asp-controller="Authentication" asp-action="Register" class="nav-link " id="register">Register</a>
        </li>
        <li class="nav-item">
            <a asp-area="Customer" asp-controller="Authentication" asp-action="Login" class="nav-link " id="login">Login</a>
        </li>
    }
</ul>